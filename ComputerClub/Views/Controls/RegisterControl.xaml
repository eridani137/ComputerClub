<UserControl x:Class="ComputerClub.Views.Controls.RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:ComputerClub.Converters"
             ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </UserControl.Resources>

    <Grid Margin="30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Регистрация"
                   FontSize="20" FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16" />

        <!-- Логин -->
        <TextBlock Grid.Row="1" Text="Логин:" Margin="0,0,0,5" />
        <ui:TextBox Grid.Row="2"
                    Text="{Binding RegLogin, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,5" />
        <TextBlock Grid.Row="3"
                   Text="{Binding RegLoginError}"
                   Foreground="Red" FontSize="12"
                   Visibility="{Binding HasRegLoginError, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Margin="0,0,0,8" />

        <!-- ФИО -->
        <TextBlock Grid.Row="4" Text="ФИО:" Margin="0,0,0,5" />
        <ui:TextBox Grid.Row="5"
                    Text="{Binding RegFullName, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="Иванов Иван Иванович"
                    Margin="0,0,0,5" />
        <TextBlock Grid.Row="6"
                   Text="{Binding RegFullNameError}"
                   Foreground="Red" FontSize="12"
                   Visibility="{Binding HasRegFullNameError, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Margin="0,0,0,8" />

        <!-- Телефон -->
        <TextBlock Grid.Row="7" Text="Телефон:" Margin="0,0,0,5" />
        <ui:TextBox Grid.Row="8"
                    Text="{Binding RegPhone, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="+7 (999) 999-99-99"
                    Margin="0,0,0,5" />
        <TextBlock Grid.Row="9"
                   Text="{Binding RegPhoneError}"
                   Foreground="Red" FontSize="12"
                   Visibility="{Binding HasRegPhoneError, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Margin="0,0,0,8" />

        <!-- Пароль -->
        <TextBlock Grid.Row="10" Text="Пароль:" Margin="0,0,0,5" />
        <ui:PasswordBox x:Name="PasswordBox"
                        Grid.Row="11"
                        PasswordChanged="PasswordBox_PasswordChanged"
                        Margin="0,0,0,5" />
        <TextBlock Grid.Row="12"
                   Text="{Binding RegPasswordError}"
                   Foreground="Red" FontSize="12"
                   Visibility="{Binding HasRegPasswordError, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Margin="0,0,0,8" />

        <!-- Кнопки -->
        <StackPanel Grid.Row="13"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,10,0,0">

            <ui:Button Content="Зарегистрироваться"
                       HorizontalAlignment="Center"
                       Width="180"
                       Command="{Binding RegisterCommand}"
                       CommandParameter="{Binding ElementName=PasswordBox}"
                       IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" />

            <Button Content="Уже есть аккаунт? Войти"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    FontSize="12"
                    Margin="0,8,0,0"
                    Command="{Binding ShowLoginCommand}" />

            <TextBlock Text="{Binding RegErrorMessage}"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"
                       Visibility="{Binding RegErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />

            <ProgressBar Height="5"
                         IsIndeterminate="True"
                         Margin="0,10,0,0"
                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>
    </Grid>
</UserControl>