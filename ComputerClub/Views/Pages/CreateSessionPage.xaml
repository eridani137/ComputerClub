<Page x:Class="ComputerClub.Views.Pages.CreateSessionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ComputerClub.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:viewModels="clr-namespace:ComputerClub.ViewModels.Pages"
      xmlns:converters="clr-namespace:ComputerClub.Converters"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      d:DataContext="{d:DesignInstance Type=viewModels:CreateSessionViewModel, IsDesignTimeCreatable=False}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded">
            <behaviors:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>

    <Page.Resources>
        <converters:ComputerTypeToBrushConverter x:Key="ComputerTypeToBrushConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="16,10"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                Margin="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ui:Button Content="Вчера"
                           Command="{Binding PreviousDayCommand}"
                           Margin="0,0,8,0" />
                <ui:Button Icon="{ui:SymbolIcon ChevronLeft24}"
                           Command="{Binding PreviousDayCommand}" />
                <TextBlock Text="{Binding SelectedDate, StringFormat=dd.MM.yyyy}"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           FontSize="16" FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="16,0" MinWidth="100"
                           HorizontalAlignment="Center" />
                <ui:Button Icon="{ui:SymbolIcon ChevronRight24}"
                           Command="{Binding NextDayCommand}" />
                <ui:Button Content="Сегодня"
                           Command="{Binding GoToTodayCommand}"
                           Margin="8,0,0,0" />
            </StackPanel>
        </Border>

        <ScrollViewer x:Name="MainScrollViewer"
                      Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Rows}"
                          HorizontalAlignment="Left"
                          VirtualizingPanel.IsVirtualizing="False">
                <ItemsControl.Template>
                    <ControlTemplate TargetType="ItemsControl">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="60,0,0,0">
                                <ItemsControl
                                    ItemsSource="{Binding DataContext.Hours,
                            RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#33FFFFFF"
                                                    BorderThickness="1,0,0,1"
                                                    Width="40" Height="28">
                                                <TextBlock FontSize="9"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0}:00">
                                                            <Binding />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <ItemsPresenter />
                        </StackPanel>
                    </ControlTemplate>
                </ItemsControl.Template>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="34">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Background="{Binding ComputerTypeId,
                                Converter={StaticResource ComputerTypeToBrushConverter}}"
                                    BorderBrush="#22000000"
                                    BorderThickness="0,0,0,1">
                                <TextBlock Text="{Binding ComputerId}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="SemiBold"
                                           FontSize="13" />
                            </Border>

                            <ItemsControl Grid.Column="1" ItemsSource="{Binding Cells}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="40" Height="34"
                                                BorderBrush="#22FFFFFF"
                                                BorderThickness="1,0,0,1"
                                                Tag="{Binding}"
                                                Cursor="Hand"
                                                IsHitTestVisible="True"
                                                MouseLeftButtonDown="Cell_Click">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#01000000" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsOccupied}" Value="True">
                                                            <Setter Property="Background" Value="#AA6200EE" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="Background" Value="#884CAF50" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding SessionLabel}"
                                                       FontSize="15"
                                                       Padding="2,0"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       IsHitTestVisible="False" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="2" Padding="16"
                Background="{DynamicResource ControlFillColorDefaultBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding SelectionSummary}"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               FontSize="14" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red" FontSize="12"
                               Visibility="{Binding ErrorMessage,
                                   Converter={StaticResource NullToVisibilityConverter}}" />
                </StackPanel>

                <ui:Button Grid.Column="1"
                           Content="Подтвердить"
                           Appearance="Primary"
                           Icon="{ui:SymbolIcon Checkmark24}"
                           Command="{Binding ConfirmCommand}" />
            </Grid>
        </Border>
    </Grid>
</Page>