<Page x:Class="ComputerClub.Views.Pages.CreateSessionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ComputerClub.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:viewModels="clr-namespace:ComputerClub.ViewModels.Pages"
      xmlns:converters="clr-namespace:ComputerClub.Converters"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      d:DataContext="{d:DesignInstance Type=viewModels:CreateSessionViewModel, IsDesignTimeCreatable=False}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded">
            <behaviors:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>

    <Page.Resources>
        <converters:ComputerTypeToBrushConverter x:Key="ComputerTypeToBrushConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:ScheduleCellToBrushConverter x:Key="ScheduleCellToBrushConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                Padding="16,10"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                Margin="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ui:Button Content="Вчера" Command="{Binding PreviousDayCommand}" Margin="0,0,8,0" />
                <ui:Button Icon="{ui:SymbolIcon ChevronLeft24}" Command="{Binding PreviousDayCommand}" />
                <TextBlock Text="{Binding SelectedDate, StringFormat=dd.MM.yyyy}"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           FontSize="16" FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="16,0" MinWidth="100"
                           HorizontalAlignment="Center" />
                <ui:Button Icon="{ui:SymbolIcon ChevronRight24}" Command="{Binding NextDayCommand}" />
                <ui:Button Content="Сегодня" Command="{Binding GoToTodayCommand}" Margin="8,0,0,0" />
            </StackPanel>
        </Border>

        <ItemsControl Grid.Row="1" Grid.Column="0"
                      ItemsSource="{Binding Rows}"
                      VerticalAlignment="Top">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        Background="{Binding ComputerTypeId,
                            Converter={StaticResource ComputerTypeToBrushConverter}}"
                        BorderBrush="#22000000"
                        BorderThickness="0,0,0,1"
                        Height="34" Width="60">
                        <TextBlock Text="{Binding ComputerId}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontSize="13" />
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ScrollViewer Grid.Row="1" Grid.Column="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Rows}"
                          HorizontalAlignment="Left"
                          VirtualizingPanel.IsVirtualizing="False">
                <ItemsControl.Template>
                    <ControlTemplate TargetType="ItemsControl">
                        <StackPanel>
                            <ItemsControl
                                ItemsSource="{Binding DataContext.SlotHeaders,
                            RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#33FFFFFF"
                                                BorderThickness="1,0,0,1"
                                                Width="40" Height="28">
                                            <TextBlock Text="{Binding Label}"
                                                       FontSize="9"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <ItemsPresenter />
                        </StackPanel>
                    </ControlTemplate>
                </ItemsControl.Template>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ItemsControl ItemsSource="{Binding Cells}" Height="34">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="40" Height="34"
                                            BorderBrush="#22FFFFFF"
                                            BorderThickness="1,0,0,1"
                                            Tag="{Binding}"
                                            Cursor="Hand"
                                            IsHitTestVisible="True"
                                            Background="{Binding DisplayBrush,
                                            Converter={StaticResource ScheduleCellToBrushConverter}}"
                                            MouseLeftButtonDown="Cell_Click">
                                        <TextBlock Text="{Binding SessionLabel}"
                                                   FontSize="10"
                                                   Padding="2,0"
                                                   VerticalAlignment="Center"
                                                   IsHitTestVisible="False" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                Padding="16"
                Background="{DynamicResource ControlFillColorDefaultBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding SelectionSummary}"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               FontSize="14" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red" FontSize="12"
                               Visibility="{Binding ErrorMessage,
                               Converter={StaticResource NullToVisibilityConverter}}" />
                </StackPanel>

                <ui:Button Grid.Column="1"
                           Content="Подтвердить"
                           Appearance="Primary"
                           Icon="{ui:SymbolIcon Checkmark24}"
                           Command="{Binding ConfirmCommand}" />
            </Grid>
        </Border>
    </Grid>
</Page>