<Page x:Class="ComputerClub.Views.Pages.SessionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ComputerClub.Views.Pages"
      xmlns:pages="clr-namespace:ComputerClub.ViewModels.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:converters="clr-namespace:ComputerClub.Converters"
      mc:Ignorable="d"
      d:DesignHeight="800"
      d:DesignWidth="1200"
      d:DataContext="{d:DesignInstance Type=pages:SessionsViewModel, IsDesignTimeCreatable=False}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded">
            <behaviors:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </behaviors:EventTrigger>
        <behaviors:EventTrigger EventName="Unloaded">
            <behaviors:InvokeCommandAction Command="{Binding UnloadedCommand}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>

    <Page.Resources>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
        <converters:ComputerTypeToBrushConverter x:Key="ComputerTypeToBrushConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Page.Resources>

    <DockPanel Margin="20">

        <Border DockPanel.Dock="Top"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="Клиент"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               FontSize="11" Margin="0,0,0,2" />
                    <ComboBox ItemsSource="{Binding Clients}"
                              SelectedItem="{Binding SelectedClient}"
                              DisplayMemberPath="Login" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,8,0">
                    <TextBlock Text="Компьютер"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               FontSize="11" Margin="0,0,0,2" />
                    <ComboBox ItemsSource="{Binding AvailableComputers}"
                              SelectedItem="{Binding SelectedComputer}"
                              DisplayMemberPath="Id" />
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0,0,8,0">
                    <TextBlock Text="Тариф (по типу ПК)"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               FontSize="11" Margin="0,0,0,2" />
                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="4" Padding="8,6"
                            MinHeight="32">
                        
                        <DockPanel>
                            <Border Width="16" Height="16"
                                    Background="{Binding SelectedTariff.ComputerTypeId,
                        Converter={StaticResource ComputerTypeToBrushConverter}}"
                                    CornerRadius="3"
                                    Margin="0,0,6,0"
                                    DockPanel.Dock="Left"
                                    Visibility="{Binding SelectedTariff,
                        Converter={StaticResource NullToVisibilityConverter}}" />
                            <TextBlock VerticalAlignment="Center" Height="22">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding SelectedTariff.Name}" />
                                        <Setter Property="Foreground"
                                                Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTariff}" Value="{x:Null}">
                                                <Setter Property="Text" Value="Выберите компьютер" />
                                                <Setter Property="Foreground"
                                                        Value="{DynamicResource TextFillColorSecondaryBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DockPanel>
                    </Border>
                </StackPanel>

                <ui:Button Grid.Column="3"
                           Content="Открыть сессию"
                           Icon="{ui:SymbolIcon Play24}"
                           Appearance="Primary"
                           Height="36"
                           Command="{Binding OpenSessionCommand}"
                           VerticalAlignment="Bottom" />
            </Grid>
        </Border>

        <ui:InfoBar DockPanel.Dock="Top"
                    IsOpen="{Binding ErrorMessage, Converter={StaticResource NullToBoolConverter}}"
                    Message="{Binding ErrorMessage}"
                    Severity="Error"
                    IsClosable="True"
                    Margin="0,0,0,12" />

        <DataGrid ItemsSource="{Binding ActiveSessions}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Клиент"
                                    Binding="{Binding ClientName}"
                                    Width="*" />

                <DataGridTextColumn Header="ПК №"
                                    Binding="{Binding ComputerId}"
                                    Width="70" />

                <DataGridTextColumn Header="Тариф"
                                    Binding="{Binding TariffName}"
                                    Width="130" />

                <DataGridTextColumn Header="₽/час"
                                    Binding="{Binding PricePerHour, StringFormat=N2}"
                                    Width="90" />

                <DataGridTextColumn Header="Начало"
                                    Binding="{Binding StartedAt, StringFormat=HH:mm:ss}"
                                    Width="90" />

                <DataGridTextColumn Header="Длительность"
                                    Binding="{Binding Duration, StringFormat=hh\\:mm\\:ss}"
                                    Width="120" />

                <DataGridTemplateColumn Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ui:Button Content="Закрыть"
                                       Icon="{ui:SymbolIcon Stop24}"
                                       Appearance="Caution"
                                       Command="{Binding DataContext.CloseSessionCommand,
                                           RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                       CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>

</Page>